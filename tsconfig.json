{
  "compilerOptions": {
    "target": "ES2023", // Set the ECMAScript target version
    "module": "commonjs", // Specify the module system (commonjs, amd, etc.)
    "strict": true, // Enable strict mode for type safety
    "esModuleInterop": true, // Allow for easier interop with ES modules
    "allowJs": true, // Allow compiling plain JavaScript files
    "sourceMap": true // Generate source maps for debugging
  },
  "include": ["src/**/*.ts"], // Specify files to include in compilation
  "exclude": ["node_modules", "dist"] // Specify files to exclude from compilation
}
